.side-bar
  -# 画面左上部分
  .header
    %h3.header__name
      = current_user.name
    %ul.header__lists
      %li.list
        = link_to new_group_path do
          = fa_icon "edit", class: "icon"
      %li.list
        = link_to edit_user_path(current_user) do
          -# <a href="">~~</a>で記述の際、『~~』の部分が『fa_icon』にあたる書き方
          = fa_icon "cog", class: "icon"

  -# 画面左部分
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          -# = link_to group_messages_path(group.id) do：この書き方でも良い。
          .group__name
            = group.name
          .group__message
            = group.show_last_message
